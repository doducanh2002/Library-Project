<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-payments-table" author="admin">
        <createTable tableName="payments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)" defaultValue="VND">
                <constraints nullable="false"/>
            </column>
            <column name="payment_method" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="vnp_txn_ref" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="vnp_transaction_no" type="VARCHAR(100)"/>
            <column name="vnp_order_info" type="TEXT"/>
            <column name="vnp_payment_url" type="TEXT"/>
            <column name="payment_status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="gateway_status" type="VARCHAR(50)"/>
            <column name="gateway_message" type="TEXT"/>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="paid_at" type="TIMESTAMP"/>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="user_agent" type="TEXT"/>
            <column name="metadata" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Add foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="payments"
                baseColumnNames="order_id"
                constraintName="fk_payments_order_id"
                referencedTableName="orders"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        
        <!-- Add indexes -->
        <createIndex tableName="payments" indexName="idx_payments_order_id">
            <column name="order_id"/>
        </createIndex>
        
        <createIndex tableName="payments" indexName="idx_payments_payment_code">
            <column name="payment_code"/>
        </createIndex>
        
        <createIndex tableName="payments" indexName="idx_payments_vnp_txn_ref">
            <column name="vnp_txn_ref"/>
        </createIndex>
        
        <createIndex tableName="payments" indexName="idx_payments_status">
            <column name="payment_status"/>
        </createIndex>
        
        <createIndex tableName="payments" indexName="idx_payments_created_at">
            <column name="created_at"/>
        </createIndex>
        
        <createIndex tableName="payments" indexName="idx_payments_expires_pending">
            <column name="expires_at"/>
            <column name="payment_status"/>
        </createIndex>
    </changeSet>

    <changeSet id="005-create-payment-transactions-table" author="admin">
        <createTable tableName="payment_transactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="transaction_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(15,2)"/>
            <column name="gateway_response" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Add foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="payment_transactions"
                baseColumnNames="payment_id"
                constraintName="fk_payment_transactions_payment_id"
                referencedTableName="payments"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        
        <!-- Add indexes -->
        <createIndex tableName="payment_transactions" indexName="idx_payment_transactions_payment_id">
            <column name="payment_id"/>
        </createIndex>
        
        <createIndex tableName="payment_transactions" indexName="idx_payment_transactions_type">
            <column name="transaction_type"/>
        </createIndex>
        
        <createIndex tableName="payment_transactions" indexName="idx_payment_transactions_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="005-add-payment-fields-to-orders" author="admin">
        <addColumn tableName="orders">
            <column name="payment_transaction_id" type="VARCHAR(100)"/>
        </addColumn>
        
        <createIndex tableName="orders" indexName="idx_orders_payment_transaction_id">
            <column name="payment_transaction_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="005-add-payment-status-constraints" author="admin">
        <addCheckConstraint tableName="payments" constraintName="chk_payment_status"
            checkCondition="payment_status IN ('PENDING', 'COMPLETED', 'FAILED', 'EXPIRED', 'REFUNDED', 'UNPAID', 'PAID', 'PARTIALLY_REFUNDED')"/>
        
        <addCheckConstraint tableName="payments" constraintName="chk_payment_method"
            checkCondition="payment_method IN ('VNPAY_QR', 'VNPAY_CARD', 'VNPAY_ATM', 'VNPAY_BANK')"/>
        
        <addCheckConstraint tableName="payments" constraintName="chk_amount_positive"
            checkCondition="amount > 0"/>
        
        <addCheckConstraint tableName="payment_transactions" constraintName="chk_transaction_type"
            checkCondition="transaction_type IN ('PAYMENT', 'REFUND', 'WEBHOOK', 'STATUS_CHECK', 'TIMEOUT')"/>
    </changeSet>

</databaseChangeLog>